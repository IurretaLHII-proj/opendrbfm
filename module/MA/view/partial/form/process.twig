{% do form.prepare() %}

{{ form().openTag(form) | raw }}	
<div class="form-row">
	<div class="form-group col-md-6">
		<div
			class="form-group {% if formElementErrors(form.get('title')) %}error{% endif %}">
			<!--<label class="control-label">{{ form.get('title').label }}</label>-->
