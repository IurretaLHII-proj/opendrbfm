{% extends 'layout/base-layout.twig' %}

{% do form.prepare() %}
{% do form.get('email').setAttribute('class', 'form-control') %}
{% do form.get('username').setAttribute('class', 'form-control') %}
{% do form.get('password').setAttribute('class', 'form-control') %}
{% do form.get('passwordVerify').setAttribute('class', 'form-control') %}
{% do form.get('submit').setAttribute('class', 'btn btn-success') %}

{% block content %}
<div class="col-md-12">

	<h1 style="text-align:center;"><i class="fa fa-block"></i>{{ translate("New user") }}</h1>

	{{ form().openTag(form) | raw }}
	<dl class="zend_form">
		<div class="form-group">
			<dt>{{ formLabel(form.get('username')) | raw }}</dt>
			<dd>{{ formElement(form.get('username')) | raw }} {{ formElementErrors(form.get('username')) | raw }}</dd>
		</div>
		<div class="form-group">
			<dt>{{ formLabel(form.get('email')) | raw }}</dt>
			<dd>{{ formElement(form.get('email')) | raw }} {{ formElementErrors(form.get('email')) | raw }}</dd>
		</div>
		<div class="form-group">
			<dt>{{ formLabel(form.get('password')) | raw }}</dt>
			<dd>{{ formElement(form.get('password')) | raw }} {{ formElementErrors(form.get('password')) | raw }}</dd>
		</div>
		<div class="form-group">
			<dt>{{ formLabel(form.get('passwordVerify')) | raw }}</dt>
			<dd>{{ formElement(form.get('passwordVerify')) | raw }} {{ formElementErrors(form.get('passwordVerify')) | raw }}</dd>
		</div>
		<div class="form-group">
			<dt>{{ formLabel(form.get('roles')) | raw }}</dt>
			<dd>{{ formElement(form.get('roles')) | raw }} {{ formElementErrors(form.get('roles')) | raw }}</dd>
		</div>
		<div class="form-group">
			<dd>{{ formElement(form.get('submit')) | raw }}</dd>
		</div>	
	</dl>

</div>
{% endblock content %}
