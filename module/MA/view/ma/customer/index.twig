{% extends 'layout/base-layout.twig' %}

{% block content %}
	<div class="row">

		<!-- GROUP -->
		<div class="col-md-12"
		>
			<div class="btn-group mt-2" role="group">
				<button class="btn btn-sm btn-primary" type="button" data-toggle="collapse" data-target="#collapseForm" aria-expanded="false" aria-controls="collapseExample"><i class="fa fa-plus"></i> New</button>
			</div>
			<div class="collapse my-2" id="collapseForm">
				<h2>{{ translate("New customer") }}</h2>
				{{ partial('partial/form/customer', {'form': form}) }}
			</div>

			<hr class="my-2">

			<h2>{{ translate("Customers") }}</h2>

			<div class="table-resposive-sm">
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Code</th>
							<th>Name</th>
							<th>Contact</th>
							<th>Email</th>
							<th>Phone</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						{% for customer in collection %}
								<tr>
									<td>{{ customer.code }}</td>
									<td>{{ customer }}</td>
									<td>{{ customer.contact }}</td>
									<td>{{ customer.email }}</td>
									<td>{{ customer.phone }}</td>
									<td>{{ customer.description }}</td>
								</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock content %}
