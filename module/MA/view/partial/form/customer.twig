{% do form.prepare() %}

<div class="col">
	{{ form().openTag(form) | raw }}	
	<div
		class="form-group {% if formElementErrors(form.get('name')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('name').label }}</label>-->
	    <div class="controls">
			{{ formElement (form.get('name')) | raw }}
			{% if formElementErrors(form.get('name')) %}
				<span class="help-inline">{{ formElementErrors(form.get('name')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	<div
		class="form-group {% if formElementErrors(form.get('code')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('code').label }}</label>-->
	    <div class="controls">
			{{ formElement (form.get('code')) | raw }}
			{% if formElementErrors(form.get('code')) %}
				<span class="help-inline">{{ formElementErrors(form.get('code')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	<div
		class="form-group {% if formElementErrors(form.get('email')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('email').label }}</label>-->
	    <div class="controls">
			{{ formElement (form.get('email')) | raw }}
			{% if formElementErrors(form.get('email')) %}
				<span class="help-inline">{{ formElementErrors(form.get('email')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	<div
		class="form-group {% if formElementErrors(form.get('phone')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('phone').label }}</label>-->
	    <div class="controls">
			{{ formElement (form.get('phone')) | raw }}
			{% if formElementErrors(form.get('phone')) %}
				<span class="help-inline">{{ formElementErrors(form.get('phone')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	<div
		class="form-group {% if formElementErrors(form.get('contact')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('contact').label }}</label>-->
	    <div class="controls">
			{{ formElement (form.get('contact')) | raw }}
			{% if formElementErrors(form.get('contact')) %}
				<span class="help-inline">{{ formElementErrors(form.get('contact')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	
	<div
		class="form-group {% if formElementErrors(form.get('description')) %}error{% endif %}">
		<!--<label class="control-label">{{ form.get('description').label }}</label>-->
	    <div class="controls">
	
			<text-angular 
				name="description"
				ta-toolbar="[['bold', 'italics', 'underline' ], ['ul', 'insertLink', 'html'] ,]"
				ta-text-editor-class="form-height form-control"
				placeholder="Description"
				>
				{{ form.get('description').value | raw}}
			</text-angular>
			
			<!--{{ formElement (form.get('description')) | raw }}-->
			{% if formElementErrors(form.get('description')) %}
				<span class="help-inline">{{ formElementErrors(form.get('description')) | raw }}</span>
			{% endif %}
	    </div>
	</div>
	<div class="form-group">
		{{ formElement (form.get('submit')) }}
	</div>
	{% if redirect %}
    	<input type="hidden" name="redirect" value="{{ redirect }}">
	{% endif %}
	{{ form().closeTag(form)  | raw }}	
</div>
