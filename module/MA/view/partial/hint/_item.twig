<div class="stages">
	{% if not item.parents.isEmpty %}
		<div class="parent">
			{% for parent in item.parents %}
					{{ partial('partial/hint/item', {'item': parent}) }}
			{% endfor %}
		</div>
	{% endif %}
	<div class="hint">
		<p class="level">{{ item.stage.level }}</p>
		<p>{{ item.text }}</p>
	</div>
</div>
