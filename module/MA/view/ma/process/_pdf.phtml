													<?php endforeach; ?>
												</ul>
												<?php endif; ?>
												<?php if (!$simulation->getEffects()->isEmpty()) : ?>
												<ul>
													<small>Effects</small>
													<?php foreach ($simulation->getEffects() as $note) : ?>
														<li><?php echo $note->getText(); ?></li>
													<?php endforeach; ?>
												</ul>
												<?php endif; ?>
												<?php if (!$simulation->getPreventions()->isEmpty()) : ?>
												<ul>
													<li><small>Preventions</small></li>
