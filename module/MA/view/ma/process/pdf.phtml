    <head>
		<link href="/js/node_modules/bootstrap/dist/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css">
	</head>
	<body>

<table border="0" width="100%">
	<thead>
		<tr>
			<th colspan="6"><b><?php echo $this->entity; ?></b> <small>(nยบ<?php echo $this->entity->getNumber(); ?>)</small></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><b>Complexity</b></td>
			<td> <?php echo $this->entity->getComplexity()->getName(); ?></td>
			<td><b>Customer:</b></td>
			<td colspan="3"><?php echo $this->entity->getCustomer()->getName(); ?></td>
		</tr>
		<tr>
			<td><b>Productive plan:</b></td>
			<td> <?php echo $this->entity->getPlant()->getName(); ?></td>
			<td><b>Machine</b></td>
			<td><?php echo $this->entity->getMachine()->getName(); ?></td>
			<td><b>Line</b>
			<td><?php echo $this->entity->getLine(); ?></td>
		</tr>
