							<li>
								<small>Reason <?php echo $r+1; ?></small>
							</li>
							<?php foreach ($reason->getNotes() as $note): ?>
								<li><?php echo $note->getText(); ?></li>
							<?php endforeach ?>
							<?php if (!$reason->getInfluences()->isEmpty()) : ?>
