			<!--<label class="control-label">{{ form.get('body').label }}</label>-->
		    <div class="controls">
		
				<text-angular 
					name="body"
					ta-toolbar="[['bold', 'italics', 'underline' ], ['ul', 'insertLink', 'html'] ,]"
					ta-text-editor-class="form-height form-control"
					placeholder="Description"
					>
					{{ form.get('body').value | raw}}
				</text-angular>
				
				<!--{{ formElement (form.get('body')) | raw }}-->
				{% if formElementErrors(form.get('body')) %}
					<span class="help-inline">{{ formElementErrors(form.get('body')) | raw }}</span>
				{% endif %}
		    </div>
		</div>
		{{ formElement (form.get('submit')) }}
		{{ form().closeTag(form)  | raw }}	
	</div>
