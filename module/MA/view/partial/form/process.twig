{% do form.prepare() %}

<div class="col">
	{{ form().openTag(form) | raw }}	
	<div
		class="form-group {% if formElementErrors(form.get('title')) %}error{% endif %}">
		<label class="control-label">{{ form.get('title').label }}</label>
	    <div class="controls">
			{{ formElement (form.get('title')) | raw }}
			{% if formElementErrors(form.get('title')) %}
				<span class="help-inline">{{ formElementErrors(form.get('title')) | raw}}</span>
			{% endif %}
	    </div>
	</div>
	
	<div
		class="form-group {% if formElementErrors(form.get('body')) %}error{% endif %}">
		<label class="control-label">{{ form.get('body').label }}</label>
	    <div class="controls">
	
			<text-angular 
				name="body"
				ta-toolbar="[['bold', 'italics', 'underline' ], ['ul', 'insertLink', 'html'] ,]"
				ta-text-editor-class="form-height form-control"
				>
				{{ form.get('body').value | raw}}
			</text-angular>
			
			<!--{{ formElement (form.get('body')) | raw }}-->
			{% if formElementErrors(form.get('body')) %}
				<span class="help-inline">{{ formElementErrors(form.get('body')) | raw }}</span>
			{% endif %}
	    </div>
	</div>
	{{ formElement (form.get('submit')) }}
	{{ form().closeTag(form)  | raw }}	
</div>
